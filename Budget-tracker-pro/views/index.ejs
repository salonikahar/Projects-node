<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="widtd=device-widtd, initial-scale=1.0" />
    <title>Budget Tracker System</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <link rel="stylesheet" href="style.css" /> -->
</head>

<body>
    <div class="container py-5">
        <h1 class="text-center mb-4">Budget Tracker System</h1>

        <div class="row g-4">
            <!-- Input Section -->
            <div class="col-md-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Add Budget</h3>
                        <form method="post" action="/addBudget">
                            <div class="mb-3">
                                <label for="budget-input" class="form-label">Budget:</label>
                                <input type="number" id="budget-input" name="budget" class="form-control"
                                    placeholder="Enter budget" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Add Budget</button>
                        </form>
                    </div>
                </div>

                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Add Expense</h3>
                        <form method="post" action="/addExpense">
                            <div class="mb-3">
                                <label for="expense-title" class="form-label">Expense Title:</label>
                                <input type="text" id="expense-title" name="expenseName" class="form-control"
                                    placeholder="Enter title" required>
                            </div>
                            <div class="mb-3">
                                <label for="expense-amount" class="form-label">Amount:</label>
                                <input type="number" id="expense-amount" name="expenseAmout" class="form-control"
                                    placeholder="Enter amount" required>
                            </div>
                            <button type="submit" class="btn btn-success w-100 mb-2">Add Expense</button>
                        </form>

                        <form method="get" action="/reset">
                            <button type="submit" class="btn btn-danger w-100">Reset All</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Summary Section -->
            <div class="col-md-7">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <h4 class="card-title mb-3">Summary</h4>
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Total Budget:
                                <span class="fw-bold text-primary" id="total-budget">
                                    <%= budget %>
                                </span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Total Expense:
                                <span class="fw-bold text-danger" id="total-expense">
                                    <%= totalExpense %>
                                </span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Budget Left:
                                <span class="fw-bold text-success" id="budget-left">
                                    <%= budgetLeft %>
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title mb-3">Expense History</h4>
                        <table class="table table-bordered table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>No</th>
                                    <th>Expense Name</th>
                                    <th>Amount</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="expense-list">
                                <% record.map((v, i)=> { %>
                                    <tr>
                                        <td>
                                            <%= ++i %>
                                        </td>
                                        <td>
                                            <%= v.expenseName %>
                                        </td>
                                        <td>$<%= v.expenseAmout %>
                                        </td>
                                        <td>
                                            <!-- Add buttons or links here if you want edit/delete -->
                                            <a href="/deleteEx/<%= --i %>">
                                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>